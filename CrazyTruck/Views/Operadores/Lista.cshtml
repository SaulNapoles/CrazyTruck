@using Nucleo.CrazyTruck
@model List<Operador>

@{
    ViewBag.Title = "Lista";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css">
}

<div id="subtitleSection" class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-6 left">
            <h3>Lista de Operadores</h3>
        </div>
        <div class="col-xs-12 col-sm-6 right">
            <div class="btnFloat">
                <button type="button" id="btnShowAddOperador" class="btnAdd"><span><i class="fas fa-plus"></i></span><span>Agregar</span></button>
            </div>
        </div>
    </div>
</div>

<div id="tableSection" class="container-fluid">
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-hover display" id="tableOperadores" style="width:100%">
                <thead>
                    <tr>
                        <th>+</th>
                        <th class="none">ID</th>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Licencia</th>
                        <th class="none">NSS</th>
                        <th class="none">CURP</th>
                        <th class="none">Teléfono</th>
                        <th class="none">Dirección</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Nucleo.CrazyTruck.Operador o in Model)
                    {
                        if (Model != null)
                        {
                            <tr>
                                <td class="details-control"><i class="fas fa-plus-square"></i></td>
                                <td class="none">@o.id</td>
                                <td>@o.numOperador</td>
                                <td>@o.nombre</td>
                                <td>@o.apellido</td>
                                <td>@o.numLicencia</td>
                                <td class="none">@o.nss</td>
                                <td class="none">@o.curp</td>
                                <td class="none">@o.telefono</td>
                                <td class="none">@o.direccion</td>
                                <td><button type="button" class="btnEdit btnShowEditOperador"><i class="fas fa-pencil-alt"></i></button><button type="button" class="btnDelete btnShowDeleteOperador"><i class="fas fa-trash-alt"></i></button></td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modals">
    <!-- Modal form -->
    <div class="modal fade" id="modalFormOperador" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    <button type="button" class="close right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fas fa-times"></i></span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form action="#" method="post" class="formOperador">
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label for="operadorNombre">Nombre:</label>
                                    <input type="text" name="operadorNombre" id="operadorNombre">
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label for="operadorApellido">Apellido:</label>
                                    <input type="text" name="operadorApellido" id="operadorApellido">
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label for="operadorNss">NSS:</label>
                                    <input type="text" name="operadorNss" id="operadorNss">
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label for="operadorCurp">CURP:</label>
                                    <input type="text" name="operadorCurp" id="operadorCurp">
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label for="operadorNumLicencia">Licencia:</label>
                                    <input type="text" name="operadorNumLicencia" id="operadorNumLicencia">
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label for="operadorTelefono">Teléfono:</label>
                                    <input type="text" name="operadorTelefono" id="operadorTelefono">
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="operadorDireccion">Dirección:</label>
                                    <textarea rows="3" name="operadorDireccion" id="operadorDireccion"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnAccept"><span><i class="fas fa-check"></i></span><span>Aceptar</span></button>
                    <button type="button" class="btnCancel" data-dismiss="modal"><span><i class="fas fa-times"></i></span><span>Cancelar</span></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal delete -->

    <div class="modal fade" id="modalDeleteOperador" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    <button type="button" class="close right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fas fa-times"></i></span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form action="#" method="post" class="formOperador">
                            <div class="col-xs-12">
                                <p>Esta seguro de eliminar operador</p>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnAccept"><span><i class="fas fa-check"></i></span><span>Aceptar</span></button>
                </div>
            </div>
        </div>
    </div>


</div>

@section JavaScript {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>
    <script src="~/scripts/operadoresScriptt.js"></script>
}